@model TCGshopTestEnvironment.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
<div class="col-md-4">
    <form method="post" asp-action="Login" asp-controller="Account">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" size="10" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
            <span asp-validation-for="RememberMe"></span>
        </div>
        <div>
            <p><input type="submit" value="Login" /></p>
        <div class="form-group">
            <p>
                <a>Forgot your password?</a>
            </p>
            <p>
                <a asp-action="Register">No account yet? Register</a>
            </p>
        </div>
</div>

    </form>
</div>
</div>