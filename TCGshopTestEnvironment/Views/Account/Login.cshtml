@model TCGshopTestEnvironment.ViewModels.LoginViewModel


<form method="post" asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div><label asp-for="RememberMe"></label>
        <input asp-for="RememberMe"/>
        <span asp-validation-for="RememberMe"></span>
        </div>
    <div><p><input type="submit" value="Login" /></p>
        <p>
            <a asp-action="Register">No account yet? Register</a>
    </p></div>


</form>
